@page
@model BookListRazorCRUD.Pages.BookList.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />

<h2 class="text-info">Edit Book</h2>

<br />

<div class="border container" style="padding: 30px">
    <form method="post">
        <input type="hidden" asp-for="Book.ID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Author"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.ISBN"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-for="Index" class="btn btn-success form-control text-white">Back to Index</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}